<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <property name="now" value="now()" dbms="postgresql" />
    <changeSet id="01" author="ylab">

        <createSequence
            startValue="1"
            incrementBy="1"
            sequenceName="users" />

        <createSequence
            startValue="1"
            incrementBy="1"
            sequenceName="cars" />

        <createSequence
            startValue="1"
            incrementBy="1"
            sequenceName="orders" />

        <sql> CREATE SCHEMA IF NOT EXISTS cs_schema; </sql>

        <createTable tableName="users" schemaName="cs_schema">
            <column name="id" type="int" defaultValueComputed="nextval('users')" />
            <column name="username" type="varchar(50)" />
            <column name="password" type="varchar(50)" />
            <column name="role" type="varchar(100)" />
            <column name="contacts" type="varchar(1000)" />
        </createTable>

        <createTable tableName="cars" schemaName="cs_schema">
            <column name="id" type="int" defaultValueComputed="nextval('cars')" />
            <column name="mark" type="varchar(50)" />
            <column name="model" type="varchar(50)" />
            <column name="year" type="int" />
            <column name="price" type="int" />
            <column name="condition" type="varchar(50)" />
        </createTable>

        <createTable tableName="orders" schemaName="cs_schema">
            <column name="id" type="int" defaultValueComputed="nextval('orders')" />
            <column name="nameBuyer" type="varchar(50)" />
            <column name="status" type="varchar(50)" />
            <column name="mark" type="varchar(50)" />
            <column name="model" type="varchar(50)" />
        </createTable>

    </changeSet>
</databaseChangeLog>